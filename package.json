{
  "name": "node-express-mongoose-starter",
  "version": "2.0.0",
  "description": "A Boilerplate application for building REST APIs using node, express and mongoose",
  "author": "THirumurugan",
  "main": "index.js",
  "private": false,
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development  nodemon --exec babel-node index.js",
    "lint": "esw *.js src --color",
    "lint:watch": "npm run lint -- --watch",
    "start": "node index",
    "test": "cross-env NODE_ENV=test mocha --timeout 5000 --ui bdd --reporter spec --colors src --recursive --exit",
    "test:watch": "npm test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text npm run test"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@hapi/joi": "15.0.2",
    "bcrypt": "3.0.6",
    "bluebird": "3.5.4",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "cookie-parser": "1.4.4",
    "cors": "2.8.5",
    "debug": "4.1.1",
    "dotenv": "8.0.0",
    "express": "4.17.3",
    "express-jwt": "5.3.1",
    "express-validation": "1.0.2",
    "faker": "4.1.0",
    "helmet": "3.18.0",
    "http-status": "1.3.2",
    "joi": "14.3.1",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.15",
    "method-override": "3.0.0",
    "mongoose": "5.7.5",
    "morgan": "1.9.1"
  },
  "devDependencies": {
    "@babel/node": "^7.8.4",
    "chai": "4.2.0",
    "cross-env": "5.2.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-watch": "5.1.2",
    "lint-staged": "9.2.3",
    "mocha": "6.1.4",
    "nodemon": "1.19.1",
    "nyc": "14.1.1",
    "supertest": "4.0.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
